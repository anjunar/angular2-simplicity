{
  "$schema": {
    "properties": {
      "form": {
        "widget": "form",
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "title": "First Name",
            "widget": "text",
            "readOnly" : false,
            "validators" : {
              "required" : true,
              "size" : {
                "min" : 4,
                "max" : 80
              }
            }},
          "lastName": {
            "type": "string",
            "title": "Last Name",
            "widget": "text",
            "readOnly" : false,
            "validators" : {
              "required" : true,
              "size" : {
                "min" : 4,
                "max" : 80
              }
            }},
          "birthDate": {
            "type": "string",
            "title": "Birthdate",
            "widget": "date",
            "readOnly" : false,
            "validators" : {
              "required" : true
            }
          },
          "role" : {
            "type" : "object",
            "title" : "Role",
            "widget" : "lazy-select",
            "readOnly" : false,
            "properties" : {
              "name" : {
                "type" : "string",
                "title" : "Name",
                "naming" : true
              }
            },
            "links" : {
              "list" : {
                "url" : "assets/roles.json"
              }
            }
          },
          "views" : {
            "type" : "number",
            "title" : "Views",
            "widget" : "number",
            "readOnly" : true,
            "validators" : {
              "min" : {
                "value" : 0
              },
              "max" : {
                "value" : 100
              }
            }
          },
          "emails": {
            "type": "array",
            "widget": "repeat",
            "readOnly" : false,
            "items": {
              "type": "object",
              "widget": "form",
              "properties": {
                "value": {
                  "type": "string",
                  "title": "Email",
                  "widget": "email",
                  "validators" : {
                    "email" : true
                  }
                }
              }
            }
          },
          "text" : {
            "type" : "object",
            "widget" : "editor",
            "readOnly" : false,
            "properties" : {
              "html" : {
                "type" : "string"
              },
              "text" : {
                "type" : "string"
              }
            }
          }
        }
      }
    },
    "links" : {
      "update" : {
        "method" : "PUT",
        "url" : "service"
      }
    }
  },
  "form": {
    "firstName": "Patrick",
    "lastName": "Bittner",
    "birthDate": "1980-04-01",
    "views" : 10,
    "test" : "test",
    "role" : {
      "id" : 1,
      "name" : "Administrator"
    },
    "emails": [
      {
        "value": "patrick.bittner@hamburg.de"
      },
      {
        "value": "anjunar@gmx.de"
      }
    ],
    "text" : {
      "html" : "Test",
      "text" : "Test"
    }
  }
}
